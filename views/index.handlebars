<h1>Eat da BURGER!</h1>

<h2>Burgers to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burgerName}}
      <button class="devour" data-id="{{id}}" data-newsleep="{{sleep}}">EAT ME!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
      <li>{{burgerName}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="HB" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
